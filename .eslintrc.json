{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "prefer-const": "error", 
    "no-var": "error",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "build/",
    "node_modules/",
    "tests/",
    "*.js",
    "*.mjs", 
    "*.cjs"
  ],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module"
      }
    }
  ]
}